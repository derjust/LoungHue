<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.derjust.lounghue" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Insomnia">
        <param name="android-package" value="nl.xservices.plugins.Insomnia" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <name>LoungHue</name>
    <description>
        LoungHue
    </description>
    <author email="zeeman@zeeman.de" href="http://github.com/derjust/LoungHue">
        Sebastian Just
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference>
        <preference name="Fullscreen" value="true" />
    </preference>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <icon src="www/img/favicon" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
</widget>
