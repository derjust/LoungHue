<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.derjust.lounghue" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LoungHue</name>
    <description>
        LoungHue
    </description>
    <author email="zeeman@zeeman.de" href="http://github.com/derjust/LoungHue">
        Sebastian Just
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" /><!--
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />-->

    <icon src="www/img/favicon" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

    <preference name="Fullscreen" value="true" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/img/favicon/apple-icon-180x180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/favicon/apple-icon-60x60.png" width="60" height="60" />
        <icon src="www/img/favicon/apple-icon-120x120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/favicon/apple-icon-76x76.png" width="76" height="76" />
        <icon src="www/img/favicon/apple-icon-152x152.png" width="152" height="152" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/img/favicon/apple-icon-57x57.png" width="57" height="57" />
        <icon src="www/img/favicon/apple-icon-114x114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/img/favicon/apple-icon-72x72.png" width="72" height="72" />
        <icon src="www/img/favicon/apple-icon-114x114.png" width="144" height="144" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="www/img/favicon/Default@2x.png" width="640" height="960"/>
        <splash src="www/img/favicon/Default-Portrait.png" width="768" height="1024"/>
        <splash src="www/img/favicon/Default-Portrait@2x.png" width="1536" height="2048"/>
        <splash src="www/img/favicon/Default-Landscape.png" width="1024" height="768"/>
        <splash src="www/img/favicon/Default-Landscape@2x.png" width="2048" height="1536"/>
        <splash src="www/img/favicon/Default-568h@2x.png" width="640" height="1136"/>
        <splash src="www/img/favicon/Default-667h@2x.png" width="750" height="1334"/>
        <splash src="www/img/favicon/Default-Portrait-736h@3x.png" width="1242" height="2208"/>
        <splash src="www/img/favicon/Default-Landscape-736h@3x.png" width="2208" height="1242"/>
    </platform>
</widget>
